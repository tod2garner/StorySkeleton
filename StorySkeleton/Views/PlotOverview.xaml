<UserControl x:Class="StorySkeleton.Views.PlotOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorySkeleton.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock>Generator Used</TextBlock>
            <TextBlock>Library Used</TextBlock>
            <TextBlock>Character count</TextBlock>
            <TextBlock>Event count</TextBlock>
            <TextBlock Margin="5" TextAlignment="Center">Sequence of Events</TextBlock>
            <ItemsControl>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>Name</TextBlock>
                        <TextBlock>Tone</TextBlock>
                        <TextBlock>List Characters Involved</TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
